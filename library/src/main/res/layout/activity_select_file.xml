<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView
            android:id="@+id/ivBack"
            android:background="@drawable/fs_simple_btn_bg"
            android:scaleType="fitStart"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/fs_back"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
        
        <TextView
            android:id="@+id/tvTitle"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:textColor="@color/fsWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/tvAll"
            android:background="@drawable/fs_simple_btn_bg"
            android:layout_alignParentEnd="true"
            android:text="@string/select_all"
            android:textColor="@color/fsWhite"
            android:gravity="center"
            android:textSize="14dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tvRoot"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="@string/root"
            android:textSize="14dp"
            android:textColor="@color/fsSubText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="@drawable/fs_arrow"
            android:layout_width="14dp"
            android:layout_height="14dp"/>
        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/dirContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>
    </LinearLayout>
    
    <View
        android:background="@color/fsDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <ListView
        android:id="@+id/lv"
        android:divider="@null"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <View
        android:background="@color/fsDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tvCancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="14dp"            
            android:textColor="@color/fsWhite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
        
        <TextView
            android:id="@+id/tvSelected"
            android:gravity="center"
            android:text="@string/selected_pattern"
            android:textSize="14dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        
        <TextView
            android:id="@+id/tvOk"
            android:gravity="center"
            android:text="@string/ok"
            android:textSize="14dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/fsWhite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>        
    </LinearLayout>
</LinearLayout>