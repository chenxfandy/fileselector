<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tvRoot"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="@string/root"
            android:textSize="14dp"
            android:textColor="@color/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="@drawable/arrow"
            android:layout_width="14dp"
            android:layout_height="14dp"/>
        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/dirContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>
    </LinearLayout>
    
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <ListView
        android:id="@+id/lv"
        android:divider="@null"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tvSelected"
            android:gravity="center"
            android:text="@string/selected_pattern"
            android:textSize="14dp"
            android:background="@drawable/btn_blue_frame"
            android:textColor="@drawable/btn_textcolor"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvOk"
            android:gravity="center"
            android:text="@string/ok"
            android:textSize="14dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/btn_blue_fill"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>