<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/ivBack"
            android:scaleType="fitStart"
            android:padding="18dp"
            android:src="@drawable/back"
            android:layout_width="70dp"
            android:background="@drawable/simple_btn_bg"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginStart="10dp"
            android:text="@string/app_name"
            android:textColor="@color/titleBarCellColor"
            android:textSize="20dp"
            android:layout_toEndOf="@id/ivBack"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvAll"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/select_all"
            android:textSize="14dp"
            android:background="@drawable/simple_btn_bg"
            android:textColor="@color/titleBarCellColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/layoutUp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/arrow_up"
                android:layout_width="14dp"
                android:layout_height="16dp"/>
            <TextView
                android:text="@string/back_dir"
                android:textColor="@color/yahei"
                android:textSize="16dp"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/divider"
                android:layout_width="1px"
                android:layout_height="40dp"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/tvPath"
            android:textSize="13dp"
            android:textColor="@color/sub_text"
            android:gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <ListView
        android:id="@+id/lv"
        android:divider="@null"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tvSelected"
            android:gravity="center"
            android:text="@string/selected_pattern"
            android:textSize="14dp"
            android:background="@drawable/btn_blue_frame"
            android:textColor="@drawable/btn_textcolor"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvOk"
            android:gravity="center"
            android:text="@string/ok"
            android:textSize="14dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/btn_blue_fill"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>