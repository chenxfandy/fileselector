<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:minHeight="70dp">

    <ImageView
        android:id="@+id/iv"
        android:src="@drawable/fs_folder"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/fsivSelect"
        android:src="@drawable/fs_chkbox_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    
    <ImageView
        android:id="@+id/fsivDel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fs_del"/>
    
    <Button
        android:id="@+id/fschkView"
        android:focusable="false"
        android:background="@color/fsTransparent"
        android:layout_alignParentEnd="true"
        android:layout_width="56dp"
        android:layout_height="70dp"/>
    
    <LinearLayout
        android:id="@+id/fslayoutInfo"
        android:orientation="vertical"
        android:layout_toEndOf="@id/iv"
        android:layout_toStartOf="@id/fsivSelect"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fstvName"
            android:text="html入门到精通"
            android:textColor="@color/fsYahei"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fstvDesc"
            android:text="5.4M"
            android:textSize="12dp"
            android:textColor="@color/fsEditHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:alpha="0.5"
        android:layout_alignStart="@id/fslayoutInfo"
        android:layout_alignEnd="@id/fsivSelect"
        android:layout_alignParentBottom="true"
        android:background="@color/fsDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>